# MongoDB
MONGO_CONNECTION_URL=mongodb://127.0.0.1:27017/chess-o-clock

# Chess Puzzle API
PUZZLE_API_URL=your_puzzle_api_url
PUZZLE_API_KEY=your_puzzle_api_key

# Application
HOSTNAME=localhost:3000
NODE_ENV=development

# Farcaster MiniApp Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Farcaster Account Configuration
# You'll need to replace these with actual signed account association data
# Generate these using Farcaster's signing tools for your domain
FARCASTER_ACCOUNT_ASSOCIATION_HEADER=placeholder-header-will-be-replaced
FARCASTER_ACCOUNT_ASSOCIATION_PAYLOAD=placeholder-payload-will-be-replaced  
FARCASTER_ACCOUNT_ASSOCIATION_SIGNATURE=placeholder-signature-will-be-replaced

# Optional: Webhook URL for notifications (if you want to receive miniapp events)
FARCASTER_WEBHOOK_URL=https://your-domain.com/api/webhooks/farcaster

# Neynar API (for Farcaster data)
NEYNAR_API_KEY=your_neynar_api_key
